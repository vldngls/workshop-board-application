{
  "name": "workshop-board-application",
  "private": true,
  "workspaces": ["server", "web"],
  "scripts": {
    "init": "node workspace/scripts/run-setup.js --auto",
    "init:interactive": "node workspace/scripts/run-setup.js",
    "deploy": "node workspace/scripts/run-setup.js --auto --mode network --environment dealership",
    "dev": "concurrently --names \"SERVER,WEB\" --prefix-colors \"cyan,magenta\" \"npm run server:dev\" \"npm run web:dev\"",
    "build": "npm run server:build && npm run web:build",
    "start": "concurrently --names \"SERVER,WEB\" --prefix-colors \"cyan,magenta\" \"npm run server:start\" \"npm run web:start\"",
    "web:dev": "npm --prefix web run dev",
    "web:build": "npm --prefix web run build",
    "web:start": "npm --prefix web run start",
    "server:dev": "npm --prefix server run dev",
    "server:build": "npm --prefix server run build",
    "server:start": "npm --prefix server run start",
    "install:all": "npm install && npm run install:server && npm run install:web",
    "install:server": "npm --prefix server install",
    "install:web": "npm --prefix web install",
    "seed": "npm --prefix server run seed",
    "seed:enhanced": "npm --prefix server run seed:enhanced",
    "seed:comprehensive": "npm --prefix server run seed:comprehensive",
    "seed:realistic": "npm --prefix server run seed-realistic",
    "create-superadmin": "npm --prefix server run create-superadmin"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

